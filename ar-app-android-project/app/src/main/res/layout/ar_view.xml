<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArActivity">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/ux_fragment"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:onClick="finishAr"
        android:src="@drawable/back_arrow_svg"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/clear_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/ux_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:onClick="clearScene"
        android:scaleType="fitCenter"
        android:src="@drawable/close_svg"
        app:tint="@color/white" />

    <!-- <ImageButton
        android:id="@+id/measure_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/clear_button"
        android:layout_alignBottom="@id/ux_fragment"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:onClick="switchMode"
        android:src="@drawable/measure_tape_svg"
        app:tint="#515151" /> -->

</RelativeLayout>